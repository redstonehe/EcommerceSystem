    {
        <strong ><a>@Model.ChannelInfo.Name</a></strong>
        @:&nbsp; &gt; &nbsp;
        <strong ><a>@Model.GroupProductInfo.GroupTitle</a></strong>
    }
    else { 
    <strong ><a>@Model.ChannelInfo.Name</a></strong>
        }
</div>

<div class="box1210">
