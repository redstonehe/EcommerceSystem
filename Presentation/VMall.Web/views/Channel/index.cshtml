<script type="text/javascript">
    $(function () {
        var channelid=@Model.ChId;
        $("#channel_"+channelid).addClass('clickactive').siblings(".channeltitle").removeClass('clickactive');
        //品牌More
        $("#showmorebrand").toggle(
