@if (ViewBag.Mark == 1) { 
<div class="cooperation box1000">
    <p style="font-size: 24px;color:red;">合作单位</p>
    <ul class="bkzf-list ">
        @foreach (var item in WorkContext.FriendLinkList.OrderBy(x => x.Id))
        { 
            <li>
                <a href="@item.Url" target="@(item.Target==1?"_blank":"_self")">
                    <div class="cooperationitem">
                        <img src="/upload/friendlink/@item.Logo" alt="@item.Title" width="100%"/>
                    </div>
                </a>
            </li>
        }

    </ul>
    <div class="clear"></div>
</div>
}
<!-- footer start -->
<div class="footer">
    <!-- 快递服务部分 -->
    <div class="bkzf box1000">
        <ul class="bkzf-list ">
            <li>
