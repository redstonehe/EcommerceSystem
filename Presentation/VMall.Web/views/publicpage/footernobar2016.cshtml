                    <p class="bl-text">7×24小时无休客服</p>
                </div>
            </li>
        </ul>
        <div class="clear"></div>
    </div>

    <!-- 新手指引部分 -->
    <div class="xszy box1000">
        <ul class="xszy-list">
            @foreach (HelpInfo info in WorkContext.HelpList.FindAll(x => x.Pid == 0 && x.Id != 27))
            {
                <li>
                    <span>@info.Title</span>
                    @foreach (HelpInfo item in WorkContext.HelpList.FindAll(x => x.Pid == info.Id))
                    {
                        if (item.Url.Length == 0)
                        {
                        <p>
                            <a href="@Url.Action("question", "help", new RouteValueDictionary { { "id", item.Id } })">@item.Title</a>
                        </p>
                        }
                        else
                        {
                        <p>
                            <a href="@item.Url">@item.Title</a>
                        </p>
                        }
                    }
                </li>
            }

        </ul>

    </div>

    <div class="clear"></div>
</div>

