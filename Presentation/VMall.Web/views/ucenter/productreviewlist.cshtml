@model VMall.Web.Models.UserProductReviewListModel
@{
    Layout = "~/views/shared/_layout_user.cshtml";
    ViewBag.Title = "商品评价-" + WorkContext.MallConfig.SiteTitle;
    ViewBag.PositionTitle = "商品评价";
    ViewBag.Mark = 2;
    ViewBag.IsBox1210 = 0;
}

<div class="bigBox" id="member">
<div class="box">
@Html.Partial("/views/ucenter/leftNav.cshtml")

<div id="memberR">
    <h2 id="memberRT">@ViewBag.PositionTitle</h2>
    <div class="favT">
        <div class="favTpage">
            共有 <b>@Model.PageModel.TotalCount</b> 条记录<i>
            <font color="#ff6600">@Model.PageModel.PageNumber</font>/@Model.PageModel.TotalPages </i> &nbsp; 
            @if (Model.PageModel.HasPrePage)
            { 
                <a href = "@Url.Action("productreviewlist", new RouteValueDictionary { { "page", Model.PageModel.PrePageNumber } })" class="whiteBT">上一页</a>@:&nbsp; 
            }
            else
            {
                <a href="javascript:;" class="whiteBT">上一页</a>@:&nbsp; 
            }
            @if (Model.PageModel.HasNextPage)
            {
                <a href = "@Url.Action("productreviewlist", new RouteValueDictionary { { "page", Model.PageModel.NextPageNumber } })" class="whiteBT">下一页</a>
            }
            else
            {
                <a href="javascript:;" class="whiteBT">下一页</a>
            } 
        </div>
    </div>
    <table width="100%" border="0" cellspacing="0" class="dingdan">
         <thead>
          <tr>
            <th valign="bottom">商品信息</th>
            <th width="150px" align="left">评价时间</th>
            <th width="150px" align="left">内容@*@WorkContext.PayCreditName*@</th>
          </tr>
        </thead>
        <tbody>
            @foreach (ProductReviewInfo info in Model.ProductReviewList)
            {
           <tr>
                <td>
                <div class="proList">
                    <img src="/upload/store/@info.StoreId/product/show/thumb60_60/@info.PShowImg" width="50" height="50" /><a href="@Url.Action("product", "catalog", new RouteValueDictionary { { "pid", info.Pid } })">@info.PName<br /></a>
                    @*<div class="memberStar"><div class="star"><span class="star_yellow" style=" width:80%;">&nbsp;</span></div><a href="#">10267评价</a></div>*@
                    <div class="clear"></div>
                </div>
                </td>
                <td>@info.ReviewTime.ToString("yyyy-MM-dd HH:mm:ss")<br /></td>
                <td>@info.Message</td>
            </tr>
            }
        </tbody>
    </table>

<div class="favT">
    <div class="favTpage">
        共有 <b>@Model.PageModel.TotalCount</b> 条记录<i>
        <font color="#ff6600">@Model.PageModel.PageNumber</font>/@Model.PageModel.TotalPages </i> &nbsp; 
        @if (Model.PageModel.HasPrePage)
        { 
            <a href = "@Url.Action("productreviewlist", new RouteValueDictionary { { "page", Model.PageModel.PrePageNumber } })" class="whiteBT">上一页</a>@:&nbsp; 
        }
        else
        {
            <a href="javascript:;" class="whiteBT">上一页</a>@:&nbsp; 
        }
        @if (Model.PageModel.HasNextPage)
        {
            <a href = "@Url.Action("productreviewlist", new RouteValueDictionary { { "page", Model.PageModel.NextPageNumber } })" class="whiteBT">下一页</a>
        }
        else
        {
            <a href="javascript:;" class="whiteBT">下一页</a>
        } 
    </div>
</div>

</div>

<div class="clear"></div>
</div>
<div class="clear"></div>
</div>

