        </div>

        <div class="clear"></div>
    </div>
    <div class="clear"></div>
</div>

<script>
    $('.moreshare,.showCode').mouseover(function () {
        $(".showCode").show().stop(true, false).animate({ top: "0px" }, 100);
    });
    $('.moreshare,.showCode').mouseleave(function () {
        $(".showCode").stop(true, false).animate({ top: "-25px" }, 100, function () {
            $(".showCode").hide();
        });
    });
</script>

