@model VMall.Web.Models.SubRecommendListModel
@using VMall.Core;
@{
    Layout = "~/views/shared/_layout_user.cshtml";
    ViewBag.Title = "分享会员-" + WorkContext.MallConfig.SiteTitle;
    ViewBag.PositionTitle = "分享会员";
    ViewBag.Mark = 2;
    ViewBag.IsBox1210 = 0;
}
