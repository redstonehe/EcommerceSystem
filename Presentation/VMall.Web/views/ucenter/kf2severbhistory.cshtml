@model  VMall.Web.Models.Kf2SeverbHistoryModel
@{
    Layout = "~/views/shared/_layout_user.cshtml";
    ViewBag.Title = "申请历史记录-" + WorkContext.MallConfig.SiteTitle;
    ViewBag.PositionTitle = "申请历史记录";
    ViewBag.Mark = 2;
    ViewBag.IsBox1210 = 0;
}
<script src="@{@WorkContext.CSSCDN}/scripts/layer/layer.js" type="text/javascript"></script>
<style>
    table {
        margin-bottom: 40px;
    }

        table tr {
            height: 35px;
            line-height: 35px;
        }
</style>
<script>

</script>
<div class="bigBox" id="member">
    <div class="box">
        @Html.Partial("/views/ucenter/leftNav.cshtml")

        <div id="memberR" style="padding-bottom: 0px; height: auto;">
            <h2 id="memberRT">
                <strong>@ViewBag.PositionTitle</strong>&nbsp; 
            </h2>
            <table width="100%" border="0" cellpadding="0" cellspacing="0" class="tb-void">

                <tbody>
                    <tr>
                        <th>申请单号</th>
                        <th>申请时间</th>
                        <th>申请金额</th>
                        <th>卡号</th>
                        <th>卡关联信息</th>
                        <th>备注</th>
                        <th>状态</th>
                        <th>处理结果 </th>
                    </tr>
                    @foreach (var row in Model.HistoryList)
                    {
                        <tr>
                            <td>@row.ApplySN </td>
                            <td>
                                <div>@(row.CreateTime.ToString("yyyy-MM-dd HH:mm:ss"))</div>
                            </td>
                            <td>@row.Amount</td>
                            <td>@row.CardNumber
                               
                            </td>
                            
                            <td>@row.CardUserName
                                <br />
                                @row.CardMobile
                            </td>
                            <td>@row.Remark
                               
                            </td>
                          
                            <td>
                                @if (row.State.ToString() == "0")
                                { 
                                    @:审核不通过
}
                                else if (row.State.ToString() == "1")
                                {
                                    @:未审核
                                }
                                else if (row.State.ToString() == "2")
                                {
                                    @:审核成功
                                }
                            </td>
                            <td>@row.HandleResult</td>
                           
                        </tr>
                    }
                </tbody>
            </table>
            @Html.WebPager(Model.PageModel).ShowSummary(false)
        </div>

        <div class="clear"></div>
    </div>
    <div class="clear"></div>
</div>
