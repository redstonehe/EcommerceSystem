@model VMall.Web.Models.UserProductConsultListModel
@{
    Layout = "~/views/shared/_layout_user.cshtml";
    ViewBag.Title = "购买咨询-" + WorkContext.MallConfig.SiteTitle;
    ViewBag.PositionTitle = "购买咨询";
    ViewBag.Mark = 2;
    ViewBag.IsBox1210 = 0;
}


<div class="bigBox" id="member">
<div class="box">
@Html.Partial("/views/ucenter/leftNav.cshtml")

<div id="memberR">
    <h2 id="memberRT">@ViewBag.PositionTitle</h2>
    <div class="favT">
        <div class="favTpage">
            共有 <b>@Model.PageModel.TotalCount</b> 条记录<i>
            <font color="#ff6600">@Model.PageModel.PageNumber</font>/@Model.PageModel.TotalPages </i> &nbsp; 
            @if (Model.PageModel.HasPrePage)
            { 
                <a href = "@Url.Action("productconsultlist", new RouteValueDictionary { { "page", Model.PageModel.PrePageNumber } })" class="whiteBT">上一页</a>@:&nbsp; 
            }
            else
            {
                <a href="javascript:;" class="whiteBT">上一页</a>@:&nbsp; 
            }
            @if (Model.PageModel.HasNextPage)
            {
                <a href = "@Url.Action("productconsultlist", new RouteValueDictionary { { "page", Model.PageModel.NextPageNumber } })" class="whiteBT">下一页</a>
            }
            else
            {
                <a href="javascript:;" class="whiteBT">下一页</a>
            } 
        </div>
    </div>
    <table width="100%" border="0" cellspacing="0" class="dingdan">
         <thead>
          <tr>
            <th valign="bottom">咨询商品</th>
            <th>咨询/回复</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProductConsultInfo info in Model.ProductConsultList)
            {
           <tr>
                <td>
                    <a href="@Url.Action("product", "catalog", new RouteValueDictionary { { "pid", info.Pid } })"><img src="/upload/store/@info.StoreId/product/show/thumb60_60/@info.PShowImg" width="50" height="50" /></a>
                </td>
                <td>
                    <div>我的咨询: @info.ConsultMessage   &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @info.ConsultTime</div>
                    <div>商城回复：@info.ReplyMessage    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @info.ReplyTime</div>
                </td>
            </tr>
            }
        </tbody>
    </table>

<div class="favT">
    <div class="favTpage">
        共有 <b>@Model.PageModel.TotalCount</b> 条记录<i>
        <font color="#ff6600">@Model.PageModel.PageNumber</font>/@Model.PageModel.TotalPages </i> &nbsp; 
        @if (Model.PageModel.HasPrePage)
        { 
            <a href = "@Url.Action("productconsultlist", new RouteValueDictionary { { "page", Model.PageModel.PrePageNumber } })" class="whiteBT">上一页</a>@:&nbsp; 
        }
        else
        {
            <a href="javascript:;" class="whiteBT">上一页</a>@:&nbsp; 
        }
        @if (Model.PageModel.HasNextPage)
        {
            <a href = "@Url.Action("productconsultlist", new RouteValueDictionary { { "page", Model.PageModel.NextPageNumber } })" class="whiteBT">下一页</a>
        }
        else
        {
            <a href="javascript:;" class="whiteBT">下一页</a>
        } 
    </div>
</div>

</div>

<div class="clear"></div>
</div>
<div class="clear"></div>
</div>

