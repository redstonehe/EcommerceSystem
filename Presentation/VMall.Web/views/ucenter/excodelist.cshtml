    .cashitem {
        /*background:url(/images/cashbg.png) no-repeat;background-size:300px;*/
        width: 50%;
        margin: 10px auto;
        text-align: center;
        padding: 10px 0;
        position: relative;
        border-bottom: 1px dashed #c8c7cc;
        float:left;
    }

    .cashvalue1 {
        position: absolute;
        top: 50%;
        /*left: 40%;*/
        width: 100%;
