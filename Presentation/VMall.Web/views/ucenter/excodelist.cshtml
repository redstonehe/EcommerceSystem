            font-weight: bolder;
            margin: 2px;
        }</style>
<div class="bigBox" id="member">
    <div class="box">
        @Html.Partial("/views/ucenter/leftNav.cshtml")

        <div id="memberR">
            <h2 id="memberRT">@ViewBag.PositionTitle
            </h2>
            <div class="searchList">

                <div class="clear"></div>
            </div>
            @foreach (var item in Model)
            {
                <div class="cashitem">
                    @if (item.codetypeid == 2)
                    {
                        <img src="/images/excode2.png" alt="" width="90%" height="60%" />
                    }
                    @if (item.codetypeid == 3)
                    {
                        <img src="/images/excode3.png" alt="" width="90%" />
                    }
                    @if (item.codetypeid == 4)
                    {
                        <img src="/images/excode4.png" alt="" width="90%" />
                    }
                    @if (item.codetypeid == 5)
                    {
                        <img src="/images/excode5.png" alt="" width="90%" height="60%" />
                    }
                    <p class="@(item.codetypeid >= 3 ? "cashvalue2" : "cashvalue1")" style="@(item.codetypeid >= 3 ? "color:#c49964" : "color:#cfcfcf")">
                        <span>兑换码:@item.exsn</span>
                        
                        <br />
                        <span>有效期:@item.validtime.ToString("yyyy/MM/dd")</span>
                        
                        <br />
                        @if (item.oid > 0)
                        {
                            <span>已使用</span>
                        }
                        else if (item.oid == 0 && item.validtime < DateTime.Now)
                        {
                            <span>已过期</span>
                        }
                    </p>

                </div>
        
            }
