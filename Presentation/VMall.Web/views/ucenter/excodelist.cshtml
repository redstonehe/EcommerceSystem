@{
    Layout = "~/views/shared/_layout_user.cshtml";
    ViewBag.Title = "兑换码-" + WorkContext.MallConfig.SiteTitle;
    ViewBag.PositionTitle = "兑换码";
    ViewBag.Mark = 2;
    ViewBag.IsBox1210 = 0;
}
