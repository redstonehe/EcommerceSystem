                        $("#savemoney").html("¥"+parseFloat(obj.val()).toFixed(2));
                        $("#totalmoney").html("¥"+(@Model.AllOrderAmount-obj.val()-CashCount-hongBaoCount-couponMoney).toFixed(2));
                    }
                </script>
