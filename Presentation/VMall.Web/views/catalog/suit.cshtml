@model VMall.Web.Models.SuitModel
@{
    ViewBag.Title = Model.SuitPromotionInfo.Name + "-" + WorkContext.MallConfig.SiteTitle;
    ViewBag.Mark = 2;
    ViewBag.IsBox1210 = 1;
}
<link href="@{@WorkContext.CSSCDN}/css/content.css" rel="stylesheet" type="text/css" />
        <script src="@{@WorkContext.ScriptCDN}/scripts/product.js" type="text/javascript"></script>

<br />
<div id="package" class="box">

<div class="packageT">
    <div class="price">¥@Model.SuitDiscount</div>
    <div class="left"><b>优惠套装：@*</b>商品价：<del>¥@Model.ProductAmount</del> <span class="bq"> 套装价:</span><em> ¥@Model.SuitAmount</em>可用红包减免：@Model.SuitPromotionInfo.SuitHongBaoCut*@</div>
    <div class="right">1、套装优惠和满减优惠、满赠优惠不可同时享用；<br />2、一次购买，同一套装只能选择一组规格；</div>
</div>

<h2 class="packageT2">请选择商品规格：</h2>

@foreach (ExtSuitProductInfo info in Model.SuitProductList)
{
    <div class="packageI">
        <img src="/upload/store/@info.StoreId/product/show/thumb190_190/@info.ShowImg" width="128" height="128" />
        <div class="left packageIC"> 
            <dl>
                <dt><strong>[套装商品]</strong>@info.Name</dt>
                <dd><span>商 城 价：</span><p><em class="price">¥@info.ShopPrice</em></p><div class="clear"></div></dd>
                <dd><span>数    量：</span><p><em>@info.Number@*<s class="bq">加价购</S> 购买1件及以上：¥599.00*@</em>
                @*<em><s class="bq">多买优惠</S> 购买1件及以上：¥599.00</em></p><div class="clear"></div></dd>*@
            </dl>
        </div>
        <div class="clear"></div>
   </div>
}

<div></div>

<div class="packageT" style="border-top:2px solid #DDD;">
<div class="left"><b>优惠套装：</b>商品价：<del>¥@Model.ProductAmount</del> <span class="bq"> 套装价:</span><em> ¥@Model.SuitAmount</em>
    可用红包减免：-¥@Model.SuitPromotionInfo.SuitHongBaoCut
    套装@(MallKey.MallCoin)：@Model.SuitPromotionInfo.SuitHaiMi
    @if (WorkContext.IsDirSaleUser) { 
    @: 套餐PV:@Model.SuitPromotionInfo.SuitPV
    }
</div>

<div class="right" style="padding-top:15px;"><a href="javascript:addSuitToCart(@Model.SuitPromotionInfo.PmId,1)" class="redBT" style=" padding:5px 20px; font-size:20px; line-height:40px;">加入购物车</a></div>

</div>
</div>

