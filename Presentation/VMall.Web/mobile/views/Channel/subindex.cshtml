@model VMall.Web.Mobile.Models.ChannelIndexModel
@using VMall.Web.Mobile
@{
    Layout = "~/mobile/views/shared/_layout.cshtml";
    ViewBag.SubTitle = Model.ChannelInfo.Name;
    ViewBag.Title = ViewBag.SubTitle + "-" + WorkContext.MallConfig.SiteTitle + "";
    ViewBag.Mark = 2;
}
<style>
    img:hover{opacity:.7
    }
    .info2 a:hover {
        background-color: #089E9C;
    }

    .gprolist li {
       border:1px solid #eee;
        float: left;
        width: 49%;
        /*height: 13em;*/
        margin-top: 12px;
        cursor: pointer;
        padding-bottom:10px;
    }
    .floor {
    margin-bottom:20px;}
    .floor .floortitle h2 {
        float: left;
        /*margin: 10px 0 0;*/
        height: 30px;
        line-height: 40px;
    }
     .floor .floortitle h2:before{content: "";
    display: block;
    width: 3px;
    height: 30px;
    float: left;
    background: #d8505c;
    margin: 15px 0px 0 0;
    }
    .floortitle {border-bottom: 1px solid #ddd;
        height: 50px;
        position: relative;
    }

    .floor .floortitle p {
        float: left;
        height: 70px;
        overflow: hidden;
        margin: 10px 0 0 20px;
        line-height: 78px;
        color: #999;
        font-size: 14px;
    }

    .floortitle .more {
        position: absolute;
        top: 20px;
        right: 0px;
        font-size: 18px;
        color: #D02424;
    }
    .floortitle .more a{
        
        color: #D02424;
    }
       .gprolist li h4 {    font-weight: 400;    text-align: center;    color: #666;
    padding: 5px ;
    max-width: 100%;
    _width: 178px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
       .gprolist li .index_mod_iconprice {
    color: #fe575f; text-align: center;
    max-width: 100%;
    _width: 178px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
</style>
<script>
    $(function () {
        var a = $(".gprolist li a img").width();
        $(".gprolist li a img").css("height", a);
    });
</script>
<div class="proList">

    <div>
        @foreach (var item in Model.GroupProductList)
        {
            List<PartProductInfo> proList = Products.GetPartProductList(item.Products).Take(4).ToList();
            <div class="floor">
                <div class="floortitle">
                   <h2><img src="/upload/groupproductimage/@item.GroupLogo" alt="@item.GroupTitle" height="50" width="200"/> </h2>
                    @*<p>/ @item.ExtField1 (副标题)/</p>*@
                    <span class="more"><a href="@Url.Action("index", "channel", new RouteValueDictionary { { "chId", item.ChannelId },{ "gid", item.Groupid },{ "cateId", 0 }, { "brandId", 0 }, { "filterPrice", 0 }, { "onlyStock", 0 }, { "sortColumn", 0 }, { "sortDirection",1 }, { "page", 1 } })">更多&gt;&gt;</a></span>
                    <div class="clear"></div>
                </div>
                <div class="hot-goods-box">
                    <div class="sgb-cont itemdiv" id="hot1">
                        <ul class="gprolist">
                            @foreach(var proitem in proList){
                            <li class="">
                                <a href="@(Url.Action("Product", "catalog", new { pid=proitem.Pid}))">
                                    <img src="/upload/store/@proitem.StoreId/product/show/thumb230_230/@proitem.ShowImg" alt="" width="100%"  /></a>
                                <h4>@proitem.Name</h4>
                                <p class="index_mod_iconprice">¥@proitem.ShopPrice</p>
                            </li>
                            }
                        </ul>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="clear"></div>
    
</div>


<script type="text/javascript">
    
</script>

