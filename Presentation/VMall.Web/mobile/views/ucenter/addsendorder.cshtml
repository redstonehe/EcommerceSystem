</style>
<div class="userFormC">

    <div style="text-align: center; color: red; font-size: 16px;"><span>可用库存余额：@Model.AgentStock.AgentAmount</span></div>
    <h2>代理产品列表</h2>

    <div class="hot-goods-box">
        <div class="sgb-cont itemdiv" id="hot1">
            <ul class="gprolist">
                @foreach (var info in Model.ProductList)
                {
                    ProductStockInfo stock = Products.GetProductStockByPid(info.Pid);
                    if (stock.Number > 0)
                    {
                    <li class="itempro" onclick="selectPro(this);" data-pid="@info.Pid">
                        <a href="javascript:void(0);">
                            <img src="/upload/store/@(info.StoreId)/product/show/thumb350_350/@(info.ShowImg)" alt="" width="100%" height="100%"></a>
                        <h4>@info.Name</h4>
                        @{decimal agentprice = new AgentStock().SingleAgentPriceFor70(WorkContext.PartUserInfo, info.Pid);}
                        <p class="index_mod_iconprice">代理价：¥@(agentprice)</p>
                    </li>
                    }
                }
            </ul>
            <div class="clear"></div>
        </div>
    </div>
    <div class="submitSelect" onclick="confirmPro();"><span>确定</span></div>

</div>
<script>
    function selectPro(ele) {
        $(".gprolist li").removeClass("hot");
        $(ele).addClass("hot");
    }
    function confirmPro() {
        var pid = parseInt($(".gprolist li[class='itempro hot']").attr("data-pid"));
        //alert(pid );
        if (pid > 0) {
            var id = '@(Model.AgentStock.Asid)';
            window.location.href = '/mob/ucenter/ConfirmSendOrder?pid=' + pid + '&asid=' + id;
        } else {
            alert("请选择正确的产品");
        }


    }

    function join($this) {
        if (checkInput()) {
            $("form").submit();
        }
    }
    //检查输入
    function checkInput() {
        if ($.trim($("#pid").val()) == "") {
            alert("产品不能为空");
            return false;
        }

        var count = parseInt($("#count").val());
        var maxcount = parseInt($("#count").attr("data-max"));
        if (count == "") {
            alert('请填入数量');
            $("#count").focus();
            return false;
        }
        if (isNaN(count)) {
            alert('请填入数字');
            $("#count").focus();
            return false;
        }
        if (count < 0) {
            alert('数量不能为小于0!');
            $("#count").focus();
            return false;
        }
        if (count > maxcount) {
            alert('数量不能为大于最大数量!');
            $("#count").focus();
            return false;
        }
        if ($("#addressid").val() == "") {
            alert("请选择地址");
            return false;
        }

        return true;
    }

</script>


