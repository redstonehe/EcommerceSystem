<script>
    function CheckInput() {
        var Amount = $.trim($("#Amount").val());
        if (isNaN(Amount)) {
            alert("请输入数字");
            $("#Amount").val(0);
            $("#Amount").focus();
            return false;
        }
        else if (Amount < 0) {
            alert("不能输入负数");
            $("#Amount").val(0);
            $("#Amount").focus();
            return false;
        }
        else if (Amount < 100) {
            alert("提现余额不足");
            $("#Amount").val(0);
            $("#Amount").focus();
        }
        if (Amount == "") {
            alert("提现金额不能为空");
            $("#Amount").focus();
            return false;
        }
        if ($.trim($("#BankName").val()) == "-1") {
            alert("请选择银行名称");
            $("#BankName").focus();
            return false;
        }

        //if ($.trim($("#provinceId").val()) < 0) {
        //    alert('对不起,请选择省,谢谢!');
        //    $("#provinceId").focus();
        //    return false;
        //}
        //if ($("#cityId")[0].length > 1 && $("#cityId").val() < 0) {
        //    alert('对不起,请选择市,谢谢!');
        //    $("#cityId").focus();
        //    return false;
        //}

        //if ($.trim($("#BankAddress").val()) == "") {
        //    alert("详细地址不能为空");
        //    $("#BankAddress").focus();
        //    return false;
        //}
        if ($.trim($("#BankCardCode").val()) == "") {
            alert("请输入银行卡号");
            $("#BankCardCode").focus();
            return false;
        }
        if ($.trim($("#BankUserName").val()) == "") {
            alert("开户人姓名不能为空");
            $("#BankUserName").focus();
            return false;
        }
        if ($.trim($("#PayPassWord").val()) == "") {
            alert("请输入支付密码");
            $("#PayPassWord").focus();
            return false;
        }
        return true;
    }
    function applyNow($this) {
        if (CheckInput()) {
            var Amount = $.trim($("#Amount").val());
            var BankName = $.trim($("#BankName").val());
            //var regionId = parseInt($("#cityId").val());
            //var BankAddress = $.trim($("#BankAddress").val());
            var BankCardCode = $.trim($("#BankCardCode").val())
            var BankUserName = $.trim($("#BankUserName").val())
            var PayPassWord = $.trim($("#PayPassWord").val())

            $($this).html("正在提交...").removeAttr("onclick");
            $.ajax({
                type: "POST",
                url: "/ucenter/ApplyIncomeDarw?r=" + Math.random(),
                //contentType: "application/x-www-form-urlencoded; charset=utf-8",
                data: { Amount: Amount, BankName: BankName,  BankCardCode: BankCardCode, BankUserName: BankUserName, PayPassWord: PayPassWord },
                success: function (result) {
                    if (result == "200") {
                        alert("提现申请成功，请等待系统处理");
                        window.location.href = window.location.href;
                    }
                    else if (result == "300") {
                        alert("提现金额不足");
                    }
                    else if (result == "400") {
                        alert("输入信息有误");
                    }
                    else if (result == "500") {
                        alert("支付密码不正确");
                    }
                }
            });

        }
    }
    
</script>
