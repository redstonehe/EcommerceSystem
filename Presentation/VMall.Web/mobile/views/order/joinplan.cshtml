    //检查输入
    function checkInput() {
        if ($.trim($("#parentCode").val()) == "") {
            alert("推荐人编号不能为空");
            $("#parentCode").focus();
            return false;
        }
        //$('input:radio[name="managertype"]:checked').val() == 1 
        //if ($("#managerCode").val() == "") {
        //    alert("安置人编号不能为空");
        //    return false;
        //}
        if ($.trim($("#userPhone").val()) == "") {
            alert("电话号码不能为空");
            $("#userPhone").focus();
            return false;
        }
        var patrn = /^0?1[3|4|5|7|8][0-9]\d{8}$/;
        if (!patrn.test($.trim($("#userPhone").val()))) {
            alert('对不起,您输入的手机号码格式错误,请重新输入,谢谢!');
            $("#userPhone").focus();
            return false;
        }
        if ($.trim($("#userCard").val()) == "") {
            alert("身份证号码不能为空");
            $("#userCard").focus();
            return false;
        }
        var reg = /(^\d{15}$)|(^\d{18}$)|(^\d{17}(\d|X|x)$)/;
        if (reg.test($.trim($("#userCard").val())) === false) {
            alert("身份证输入不合法,请重新输入");
            $("#userCard").focus();
            return false;
        }

        return true;
    }
    

