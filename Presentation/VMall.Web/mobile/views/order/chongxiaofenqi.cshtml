@model VMall.Web.Mobile.Models.FenQiResultModel
@{
    Layout = "~/mobile/views/shared/_layout.cshtml";
    ViewBag.SubTitle = "分期结果";
    ViewBag.Title = ViewBag.SubTitle + "-" + WorkContext.MallConfig.SiteTitle + "";
    ViewBag.Mark = 0;
}

<style>
    #choseJoin a {
        background-color: #D02424;
        border-radius: 1px;
        display: inline-block;
        color: white;
        height: 30px;
        line-height: 30px;
        width: 100px;
        border: 0;
        margin-left: 40px;
        font-size: 14px;
    }
</style>
<div style="padding: 40px; font-size: 20px; text-align: center;">
    @if (!string.IsNullOrEmpty(Model.SuccessOidList) )
        {
            <p>分期成功</p> 
            <p>成功订单ID:@Model.SuccessOidList</p> 
        }
        else if (!string.IsNullOrEmpty(Model.FailOidList))
        {
            <p>存在分期失败订单</p>
            <p>失败订单ID:@Model.FailOidList</p> 
            <p>失败可能存在原因:订单已设置分期，或订单分期异常</p> 
    }
    <p><a href="/mob/ucenter/Index" class=" subOrder" style="display: block;background: #e4e4e4; padding: 4px 15px;margin: 20px 10px;height: 36px; line-height: 36px; font-size: 18px; color: #333;font-weight:400;text-decoration:none;">返回个人中心</a></p> 
</div>


