            padding: .5em 0;
        }

    .left {
        float: left;
    }

    .right {
        float: right;
    }
    /*--navfix--*/
    .navfix {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background: #f7f7f7;
        border-top: 1px solid #d9d9d9;
        z-index: 9999;
    }

        .navfix li {
            width: 20%;
            text-align: center;
            float: left;
        }

            .navfix li a {
                padding: 0.5em 0 0;
                display: inline-block;
            }

            .navfix li em {
                width: 100%;
                height: 1.75em;
                display: inline-block;
                text-align: center;
                font-size: 1em;
            }

            .navfix li p {
                font-size: 0.857em;
                color: #999;
            }

        .navfix .F-home em {
            background: url(/mobile/images/index.png) no-repeat center top;
            background-size: 1.6em auto;
        }

        .navfix .F-search em {
            background: url(/mobile/images/search.png) no-repeat center top;
            background-size: 1.6em auto;
        }

