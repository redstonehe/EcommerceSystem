@model VMall.Web.Mobile.Models.LoginModel
@{
    Layout = "~/mobile/views/shared/_layout_account.cshtml";
    ViewBag.SubTitle = "用户登陆";
   
    ViewBag.Title = ViewBag.SubTitle + "-" + WorkContext.MallConfig.SiteTitle ;
    ViewBag.Mark = 2;
}

<div class="loginTable">
    <form name="loginForm" action="">
        <div class="itmeC">
            <input type="text" class="text userName" name="@Model.ShadowName" placeholder="用户名/邮箱/手机" />
        </div>
        <div class="itmeC">
            <input type="password" class="text passWord" name="password" placeholder="输入密码" />
        </div>
        @if (Model.IsVerifyCode)
        {
            <div class="itme">
                <div class="itmeC">
                    <input type="text" class="text YZM" name="verifyCode" style="width: 150px; float: left;" placeholder="请输入验证码" maxlength="4" /><img id="verifyImage" src="/mob/tool/verifyimage" onclick="this.src='/mob/tool/verifyimage?time=' + new Date()" style="width: 100px; margin: 0 10px; float: left; height: 60px;" /><a href="javascript:void(0)" onclick="document.getElementById('verifyImage').src='/mob/tool/verifyimage?time=' + new Date()" class="left" style="line-height: 60px;">换一张</a>
                </div>
            </div>
        }
        @if (Model.IsRemember)
        {
            <div class="itmeC">
                <input name="isRemember" type="checkbox" class="checkbox">记住帐号
            </div>
        }
        <div class="itmeC"><a href="javascript:login()" class="redBt" style="display: block; padding: 0; height: 38px; width: 99%; text-align: center; line-height: 38px;">登陆</a></div>
        <div class="table" style="padding-top: 10px;">
            <div class="cell" style="width: 50%;"><a href="@Url.Action("register")">免费注册</a></div>
            <div class="cell" style="width: 50%; text-align: right;"><a href="@Url.Action("findpwd")">找回密码</a></div>
        </div>
    </form>
    @*<div class="otherLogin table">
        <p>其他登陆方式</p>
        <div class="table">
            @foreach (PluginInfo info in Model.OAuthPluginList)
            {
                IOAuthPlugin instance = (IOAuthPlugin)info.Instance;
                <a class="cell" href="@Url.Action(instance.LoginAction, instance.LoginController)"><span>@info.FriendlyName</span></a>
            }
        </div>
    </div>*@
</div>

