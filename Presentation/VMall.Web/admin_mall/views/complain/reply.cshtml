@model VMall.Web.MallAdmin.Models.ReplyComplainModel
@{
    Layout = "~/admin_mall/views/shared/_layout_adminlte.cshtml";
}
@section header{
    <title>回复会员投诉</title>
    <link type="text/css" rel="stylesheet" href="/admin_mall/content/css/site.css" />
    <script type="text/javascript" src="/admin_mall/scripts/jquery.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.unobtrusive.js"></script>
}

@section body{
    <h1 class="rightH1">
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i>首页</a></li>
            <li><a href="#">会员管理</a></li>
            <li class="active">回复投诉</li>
        </ol>

        <div class="right">
            <a href="@Html.Raw(ViewData["referer"].ToString())" class="btn btn-primary btn-sm border-radius-lg">
                <i class="fa fa-reply fa-lg"></i>返回列表</a>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </h1>
    @using (Html.BeginForm())
    {
        <div class="col-md-6">
            <div class="box box-primary">
                <!-- /.box-header -->
                <!-- form start -->
                
                    <div class="form-group">
                        <label>咨询内容</label>
                      <p><strong> @Model.ComplainInfo.complainmsg</strong></p>
                    </div>
                    <div class="form-group">
                        <label>回复内容</label>
                        @Html.TextAreaFor(x => x.ReplyMessage, new { cols = "40", rows = "6", @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.ReplyMessage)
                    </div>

                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary btn-block addBt" id="sumbitBut">提交</button>
                    <script type="text/javascript">
                        $(function () {
                            $("#sumbitBut").click(function () {
                                $("form:first").submit();
                                return false;
                            })
                        });
                    </script>
                </div>

            </div>
        </div>
        
    }
}