@model VMall.Web.MallAdmin.Models.CashRefundApplyReturnModel
@section header{
    <title>汇购卡退款申请</title>
    <link type="text/css" rel="stylesheet" href="/admin_mall/content/css/site.css" />
    <script type="text/javascript" src="/admin_mall/scripts/jquery.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.unobtrusive.js"></script>
}

@section body{
    <h1 class="rightH1">用户管理 &gt;&gt;汇购卡退款申请
        <div class="right">
            <a href="@Url.Action("cashcouponlist", "cashcoupon")" class="menuBT">
                <img src="/admin_mall/content/images/goback.jpg" />返回汇购卡列表</a>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </h1>
    @using (Html.BeginForm())
    {
        <div class="addTable">
            <table width="100%">
                <tr>
                    <td width="80px" align="right">承担手续费：</td>
                    <td>@Html.TextBoxFor(x => x.RefundPayFee, new { @class = "input", size = "45" })@Html.ValidationMessageFor(x => x.RefundPayFee)</td>
                </tr>
                <tr>
                    <td width="80px" align="right">退款说明：</td>
                    <td>@Html.TextAreaFor(x => x.RefundDesc, new { cols = "40", rows = "6", value = "" })@Html.ValidationMessageFor(x => x.RefundDesc)</td>
                </tr>
                <tr>
                    <td align="right">&nbsp;</td>
                    <td>
                        <a href="" class="addBt" id="sumbitBut">
                            <img src="/admin_mall/content/images/submit.jpg" /></a>
                        <script type="text/javascript">
                            $(function () {
                                $("#sumbitBut").click(function () {
                                    $("form:first").submit();
                                    return false;
                                })
                            });
                        </script>
                    </td>
                </tr>
                <tr>
                    <td align="right">&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </table>
        </div>
    }
}
