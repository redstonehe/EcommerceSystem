@model VMall.Web.MallAdmin.Models.UserRank2Model
@section header{
    <title>编辑用户</title>
    <link type="text/css" rel="stylesheet" href="/admin_mall/content/css/site.css" />
    <script type="text/javascript" src="/admin_mall/scripts/jquery.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="/admin_mall/content/my97datepicker/WdatePicker.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/region.js"></script>
    <script type="text/javascript">

        $(function () {
            $(".addTag li").click(function () {
                $(".addTag li").removeClass("hot");
                $(this).addClass("hot");
                $(".addTable").hide().eq($(this).index()).show(0);

            })

            $(".addBt").click(function () {
                $("form:first").submit();
                return false;
            })
        });
    </script>
}

@section body{
    <h1 class="rightH1">用户管理 &gt;&gt; 编辑用户身份
        <div class="right">
            <a href="@Html.Raw(ViewData["referer"].ToString())" class="menuBT">
                <img src="/admin_mall/content/images/goback.jpg" />返回列表</a>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </h1>
    <ul class="addTag">
        <li class="hot"><a href="javascript:;">基本信息</a></li>

        <div class="clear">
        </div>
    </ul>

    @using (Html.BeginForm())
    {
        <div class="addTable">
            <table width="100%">
                <tr>
                    <td width="86px" align="right">用户名：</td>
                    <td>
                        @Html.Label(Model.UserName)  </td>

                </tr>
                <tr>
                    <td align="right">手机号码：</td>
                    <td>@Html.Label(Model.Mobile)</td>
                </tr>
                <tr>
                    <td align="right">昵称：</td>
                    <td>@Html.Label( Model.NickName)</td>
                </tr>
                <tr >
                    <td align="right">用户等级：</td>
                    <td>@Html.DropDownListFor(x => x.UserRid, ViewData["userRankList"] as List<SelectListItem>) @Html.ValidationMessageFor(x => x.UserRid)</td>
                </tr>
                <tr >
                    <td align="right">商务中心属性：</td>
                    <td>@Html.DropDownListFor(x => x.BusiCentType, ViewData["BusiCentTypeList"] as List<SelectListItem>) @Html.ValidationMessageFor(x => x.BusiCentType)</td>
                </tr>
                <tr>
                    <td align="right">&nbsp;</td>
                    <td>
                        <a href="" class="addBt" id="sumbitBut1">
                            <img src="/admin_mall/content/images/submit.jpg" /></a>
                    </td>
                </tr>
                <tr>
                    <td align="right">&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </table>
        </div>
 
    }
}