@model VMall.Web.MallAdmin.Models.UserCachModel
@section header{
    <title>编辑用户最大汇购卡数</title>
    <link type="text/css" rel="stylesheet" href="/admin_mall/content/css/site.css" />
    <script type="text/javascript" src="/admin_mall/scripts/jquery.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="/admin_mall/content/my97datepicker/WdatePicker.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/region.js"></script>
    <script type="text/javascript">

        $(function () {
            $(".addBt").click(function () {
                $("form:first").submit();
                return false;
            })
        });
    </script>
}

@section body{
    <h1 class="rightH1">用户管理 &gt;&gt; 编辑用户最大汇购卡数
        <div class="right">
            <a href="@Html.Raw(ViewData["referer"].ToString())" class="menuBT">
                <img src="/admin_mall/content/images/goback.jpg" />返回列表</a>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </h1>


    @using (Html.BeginForm())
    {
        <div class="addTable">
            <table width="100%">
                <tr>
                    <td width="86px" align="right">最大汇购卡数：</td>
                    <td>
                        @Html.TextBoxFor(x => x.MaxCashCount, new { @class = "input", size = "35", maxlength = "20" }) @Html.ValidationMessageFor(x => x.MaxCashCount) </td>

                </tr>

                <tr>
                    <td align="right">&nbsp;</td>
                    <td>
                        <a href="" class="addBt" id="sumbitBut1">
                            <img src="/admin_mall/content/images/submit.jpg" /></a>
                    </td>
                </tr>
                <tr>
                    <td align="right">&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </table>
        </div>
    }
}