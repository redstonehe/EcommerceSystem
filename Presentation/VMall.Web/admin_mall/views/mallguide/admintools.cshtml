    <script>
        function DecryptPwd() {
            var password = $.trim($("#Encrypt").val());
            if (password == "") {
                alert("不能为空");
                return;
            }
            $.ajax({
                type: "POST",
                url: "/malladmin/home/JieMi?r=" + Math.random(),
                data: { password: password },
                success: function (result) {
                    $("#Decrypt").val(result);
                }
            });
        }

        function RemoveKey() {
            var key = $.trim($("#key").val());
            if (key == "") {
                alert("不能为空");
                return;
            }
            $.ajax({
                type: "POST",
                url: "/malladmin/home/ClearCache?r=" + Math.random(),
                data: { key: key },
                success: function (result) {
                    alert(result);
                }
            });
        }

        function DecryptPwd2() {
            var uid = $.trim($("#Encrypt2").val());
            if (uid == "") {
                alert("不能为空");
                return;
            }
            $.ajax({
                type: "POST",
                url: "/malladmin/home/AdminGetPWDByUid?r=" + Math.random(),
                data: { uid: uid },
                success: function (result) {
                    $("#Decrypt2").val(result);
                }
            });
        }
        function DecryptPwd4() {
            var mobile = $.trim($("#Encrypt4").val());
            if (mobile == "") {
                alert("不能为空");
                return;
            }
            var mobileReg = /^1[3|4|5|7|8][0-9]\d{8}$/;
            if (!mobileReg.test($.trim(mobile))) {
                alert('请输入正确的手机号码!');
                return;
            }
            $.ajax({
                type: "POST",
                url: "/malladmin/home/AdminGetPWDByMobile?r=" + Math.random(),
                data: { mobile: mobile },
                success: function (result) {
                    $("#Decrypt4").val(result);
                }
            });
        }
        function DecryptPwd3() {
            var uid = $.trim($("#Encrypt3").val());
            if (uid == "") {
                alert("不能为空");
                return;
            }
            $.ajax({
                type: "POST",
                url: "/malladmin/home/AdminGetPaypwdByUid?r=" + Math.random(),
                data: { uid: uid },
                success: function (result) {
                    $("#Decrypt3").val(result);
                }
            });
        }

        function DecryptPwd10() {
            var pwd = $.trim($("#Encrypt10").val());
            if (pwd == "") {
                alert("不能为空");
                return;
            }
            $.ajax({
                type: "POST",
                url: "/malladmin/home/CreateEncryptPwd?r=" + Math.random(),
                data: { pwd: pwd },
                success: function (result) {
                    $("#Decrypt10").val(result);
                }
            });
        }
        function GetUserCode() {
            $.ajax({
                type: "POST",
                url: "/malladmin/user/GetUniqueUserCode?r=" + Math.random(),
                success: function (result) {
                    $("#usercode").val(result);
                }
            });
        }
    </script>
}

