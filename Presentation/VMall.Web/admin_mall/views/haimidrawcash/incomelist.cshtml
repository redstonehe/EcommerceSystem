                //    data: { Id: id, state: 0, remark: f.failmark },
                //    success: function (result) {
                //        if (result == "1") {
                //            $.jBox.tip("批量撤销成功");
                //            window.location.href = window.location.href;
                //        }
                //        else if (result == "0") {
                //            $.jBox.tip("批量撤销失败");
