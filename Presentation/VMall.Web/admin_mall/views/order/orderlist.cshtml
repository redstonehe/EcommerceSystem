                                                else
                                                {
                                                @row["orderhaimi"]
                                                }
                                            </td>
                                           @* <td>@if (TypeHelper.ObjectToDecimal(row["cashdiscount"]) > 0)
                                                {
                                                @:0.00
                                 }
                                                else
                                                {
                                                @row["orderpv"]
                                                }
