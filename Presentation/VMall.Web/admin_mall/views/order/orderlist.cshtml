                                                <div>@(TypeHelper.ObjectToDateTime(row["addtime"]).ToString("yyyy-MM-dd HH:mm:ss"))</div>
                                            </td>
                                            <td>@row["orderamount"]</td>

                                            <td>@row["surplusmoney"]</td>
                                            <td>@if (TypeHelper.ObjectToDecimal(row["cashdiscount"]) > 0)
                                                {
                                                @:0.00
