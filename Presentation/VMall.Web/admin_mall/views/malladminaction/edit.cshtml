@model VMall.Web.MallAdmin.Models.MallAdminActionModel
@section header{
    <title>编辑菜单</title>
    <link type="text/css" rel="stylesheet" href="/admin_mall/content/css/site.css" />
    <script type="text/javascript" src="/admin_mall/scripts/jquery.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.unobtrusive.js"></script>
}

@section body{
    <h1 class="rightH1">权限管理 &gt;&gt; 编辑菜单
        <div class="right">
            <a href="@Html.Raw(ViewData["referer"].ToString())" class="menuBT">
                <img src="/admin_mall/content/images/goback.jpg" />返回列表</a>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </h1>


    @using (Html.BeginForm())
    {
        <div class="addTable">
            <table width="100%">
                <tr>
                    <td width="86px" align="right">菜单标题：</td>
                    <td>
                        @Html.TextBoxFor(x => x.Title, new { @class = "input", size = "35", maxlength = "20" }) @Html.ValidationMessageFor(x => x.Title)</td>
                </tr>

                <tr>
                    <td align="right">菜单action：</td>
                    <td>@Html.TextBoxFor(x => x.Action, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Action)
                        <span style="color:red;">格式为"ControllerName_ActionName",且都为小写</span>
                    </td>
                </tr>

                <tr>
                    <td align="right">菜单层级：</td>
                    <td>@Html.DropDownListFor(x => x.ParentId, ViewData["menuLevelList"] as List<SelectListItem>) @Html.ValidationMessageFor(x => x.ParentId)</td>
                </tr>
                <tr>
                    <td align="right">显示范围：</td>
                    <td>@Html.DropDownListFor(x => x.DisplayOrder, ViewData["displayOrderList"] as List<SelectListItem>) @Html.ValidationMessageFor(x => x.DisplayOrder)</td>
                </tr>
                <tr>
                    <td align="right">&nbsp;</td>
                    <td>
                        <a href="" class="addBt" id="sumbitBut">
                            <img src="/admin_mall/content/images/submit.jpg" /></a>
                        <script type="text/javascript">
                            $(function () {
                                $("#sumbitBut").click(function () {
                                    $("form:first").submit();
                                    return false;
                                })
                            });
                        </script>
                    </td>
                </tr>
                <tr>
                    <td align="right">&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </table>
        </div>
    
    }
}