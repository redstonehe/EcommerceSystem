@model List<InformtypeInfo>
@{
    Layout = "~/admin_mall/views/shared/_layout_adminlte.cshtml";
}
@section header{
    <title>消息类型列表</title>
    <link type="text/css" rel="stylesheet" href="/admin_mall/content/css/site.css" />
    <script type="text/javascript" src="/admin_mall/scripts/jquery.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/showlist.js"></script>

}

@section body{

    <h1 class="rightH1">
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i>首页</a></li>
            <li><a href="#">消息管理</a></li>
            <li class="active">消息类型</li>
        </ol>
        <div class="right">
            <a href="@Url.Action("addinformtype")" class="btn btn-primary btn-sm border-radius-lg">
                <i class="fa fa-plus-circle fa-lg"></i>
                添加类型</a>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </h1>

    <div class="table_top">
    </div>
    <section class="content">
        <div class="row">
            <div class="col-xs-6">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>名称</th>
                                    <th>排序</th>
                                    <th>管理操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var info in Model)
                                {
                                    <tr>
                                        <td>@info.name</td>
                                        <td>@info.displayorder</td>
                                        <td>
                                            <a class="btn btn-primary btn-sm" href="@Url.Action("editinformtype", new { TypeId = info.typeid })">编辑
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>

    <div class="table_bottom"></div>

}