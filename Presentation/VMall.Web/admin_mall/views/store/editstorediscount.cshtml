@model VMall.Web.MallAdmin.Models.EditStoreDiscountModel
@section header{
    <title>编辑店铺优惠梯度</title>
    <link type="text/css" rel="stylesheet" href="/admin_mall/content/css/site.css" />
    <script type="text/javascript" src="/admin_mall/scripts/jquery.js"></script>
    <link href="/admin_mall/content/css/uploadify.css" rel="stylesheet" type="text/css" />

    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="/admin_mall/content/my97datepicker/WdatePicker.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/region.js" charset="utf-8"></script>

    <style type="text/css">
        .uploadBut .cancel, .uploadBut .fileName, .uploadBut .data, .uploadBut .uploadify-progress {
            display: none;
        }
    </style>
}

@section body{
    <h1 class="rightH1">店铺管理 &gt;&gt; 编辑店铺优惠梯度
        <div class="right">
            <a href="@Html.Raw(ViewData["referer"].ToString())" class="menuBT">
                <img src="/admin_mall/content/images/goback.jpg" />返回列表</a>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </h1>
    @using (Html.BeginForm())
    {
        <div class="addTable">
            <table width="100%">
                <tr>
                    <td width="120px" align="right">优惠价格梯度1：</td>
                    <td>@Html.TextBoxFor(x => x.Amount1, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Amount1)</td>
                </tr>

                <tr>
                    <td align="right">优惠折扣1：</td>
                    <td>@Html.TextBoxFor(x => x.Discount1, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Discount1)</td>
                </tr>

                <tr>
                    <td width="80px" align="right">优惠价格梯度2：</td>
                    <td>@Html.TextBoxFor(x => x.Amount2, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Amount2)</td>
                </tr>

                <tr>
                    <td align="right">优惠折扣2：</td>
                    <td>@Html.TextBoxFor(x => x.Discount2, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Discount2)</td>
                </tr>
                <tr>
                    <td width="80px" align="right">优惠价格梯度3：</td>
                    <td>@Html.TextBoxFor(x => x.Amount3, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Amount3)</td>
                </tr>

                <tr>
                    <td align="right">优惠折扣3：</td>
                    <td>@Html.TextBoxFor(x => x.Discount3, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Discount3)</td>
                </tr>
                <tr>
                    <td width="80px" align="right">优惠价格梯度4：</td>
                    <td>@Html.TextBoxFor(x => x.Amount4, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Amount4)</td>
                </tr>

                <tr>
                    <td align="right">优惠折扣4：</td>
                    <td>@Html.TextBoxFor(x => x.Discount4, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Discount4)</td>
                </tr>
                <tr>
                    <td width="80px" align="right">优惠价格梯度5：</td>
                    <td>@Html.TextBoxFor(x => x.Amount5, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Amount5)</td>
                </tr>

                <tr>
                    <td align="right">优惠折扣5：</td>
                    <td>@Html.TextBoxFor(x => x.Discount5, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Discount5)
                       
                    </td>
                </tr>

                <tr>
                    <td align="right">&nbsp;</td>
                    <td>
                        <a href="" class="addBt" id="sumbitBut">
                            <img src="/admin_mall/content/images/submit.jpg" /></a>
                        <script type="text/javascript">
                            $(function () {
                                $("#sumbitBut").click(function () {
                                    $("form:first").submit();
                                    return false;
                                })
                            });
                        </script>
                    </td>
                </tr>
                <tr>
                    <td align="right">&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </table>
        </div>
    }
}