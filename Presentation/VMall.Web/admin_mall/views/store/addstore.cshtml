@model VMall.Web.MallAdmin.Models.AddStoreModel

@section header{
    <title>添加店铺</title>
    <link type="text/css" rel="stylesheet" href="/admin_mall/content/css/site.css"/>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="/admin_mall/content/my97datepicker/WdatePicker.js"></script>
}

@section body{
<h1 class="rightH1">
店铺管理 &gt;&gt; 添加店铺
<div class="right">
<a href="@Html.Raw(ViewData["referer"].ToString())" class="menuBT"><img src="/admin_mall/content/images/goback.jpg"/>返回列表</a>
<div class="clear"></div>
</div>
<div class="clear"></div>
</h1>
@using (Html.BeginForm())
{
    <div class="addTable">
<table width="100%">
  <tr>
    <td width="80px" align="right">店铺名称：</td>
    <td>@Html.TextBoxFor(x => x.StoreName, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.StoreName)</td>
    </tr>
          <tr>
    <td align="right">店主名称：</td>
    <td>@Html.TextBoxFor(x => x.StoreKeeperName, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.StoreKeeperName)</td>
    </tr>
    <tr>
        <td align="right">店主类型：</td>
        <td>
            <p>
                <label>@Html.RadioButtonFor(x => x.Type, 0, new { @class = "checkbox" })个人</label>
                <label>@Html.RadioButtonFor(x => x.Type, 1, new { @class = "checkbox" })公司</label>
                <br />
            </p>
        </td>
    </tr>
    <tr>
    <td align="right">店主标识：</td>
    <td>@Html.TextBoxFor(x => x.IdCard, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.IdCard)</td>
    </tr>
      <tr>
    <td align="right">店主地址：</td>
    <td>@Html.TextBoxFor(x => x.Address, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Address)</td>
    </tr>
    <tr>
    <td align="right">截止时间：</td>
    <td>
        @Html.TextBoxFor(x => x.StateEndTime, new { @class = "input", size = "18", onfocus = "WdatePicker({el:'StateEndTime'})" })
        @Html.ValidationMessageFor(x => x.StateEndTime)
    </td>
    </tr>
    @*<tr>
    <td align="right">平台归属：</td>
    <td>
        <label>@Html.RadioButtonFor(x => x.MallSource, 0, new { @class = "checkbox",@checked="true" })自营商城</label>
        <label>@Html.RadioButtonFor(x => x.MallSource, 2, new { @class = "checkbox"})有机胚芽微商订货系统</label>
        <label>@Html.RadioButtonFor(x => x.MallSource, 3, new { @class = "checkbox"})汇购优选系统</label>
    </td>
    </tr>*@
  <tr>
    <td align="right">&nbsp;</td>
    <td>
    <a href="" class="addBt" id="sumbitBut" ><img src="/admin_mall/content/images/submit.jpg" /></a>
            <script type="text/javascript">
                $(function () {
                    $("#sumbitBut").click(function () {
                        $("form:first").submit();
                        return false;
                    })
                });
        </script>
    </td>
    </tr>
  <tr>
    <td align="right">&nbsp;</td>
    <td>&nbsp;</td>
    </tr>
</table>
</div>
}
}